<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/darkTheme"
    tools:context=".Activities.MainActivity">

   <LinearLayout
       android:background="@color/purple"
       android:layout_width="match_parent"
       android:backgroundTint="@color/warm"
       android:layout_height="44dp"
       android:layout_margin="6dp">
      <TextView
          android:text="News App"
          android:textColor="@color/black"
          android:textStyle="bold"
          android:padding="6dp"
          android:textSize="22sp"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content">

      </TextView>

      <ImageView
          android:id="@+id/img_account"
          android:background="@color/warm"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="190dp"
          android:textColor="@color/black"
          android:src="@drawable/account_image"
          android:scaleType="fitEnd"
          android:padding="3dp"
          android:text="MyAccount"
          android:textSize="12sp"></ImageView>
   </LinearLayout>

   <androidx.cardview.widget.CardView
       android:layout_margin="14dp"
       app:cardElevation="8dp"
       android:layout_width="match_parent"
       android:layout_height="wrap_content">
      <androidx.appcompat.widget.SearchView
          android:id="@+id/search_bar"
          app:defaultQueryHint="Search article"
          app:iconifiedByDefault="false"
          android:layout_width="match_parent"
          android:layout_height="?attr/actionBarSize">

      </androidx.appcompat.widget.SearchView>
   </androidx.cardview.widget.CardView>

   <HorizontalScrollView
       android:layout_margin="6dp"
       android:layout_width="match_parent"
       android:layout_height="wrap_content">
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content">
         <Button
             android:id="@+id/btn_business"
             android:text="business"
             android:textAllCaps="true"
             android:textSize="12sp"
             android:padding="6dp"
             android:textColor="@color/black"
             android:layout_margin="6dp"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content">
         </Button>
         <Button
             android:id="@+id/btn_entertainment"
             android:text="entertainment"
             android:textAllCaps="true"
             android:textSize="12sp"
             android:padding="6dp"
             android:layout_margin="6dp"
             android:textColor="@color/black"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content">
         </Button>
         <Button
             android:id="@+id/btn_health"
             android:text="health"
             android:textAllCaps="true"
             android:textSize="12sp"
             android:padding="6dp"
             android:textColor="@color/black"
             android:layout_margin="6dp"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content">
         </Button>
         <Button
             android:id="@+id/btn_science"
             android:text="science"
             android:textAllCaps="true"
             android:textSize="12sp"
             android:padding="6dp"
             android:textColor="@color/black"
             android:layout_margin="6dp"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content">
         </Button>
         <Button
             android:id="@+id/btn_general"
             android:text="general"
             android:textAllCaps="true"
             android:textSize="12sp"
             android:padding="6dp"
             android:textColor="@color/black"
             android:layout_margin="6dp"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content">
         </Button>
         <Button
             android:id="@+id/btn_sports"
             android:text="sports"
             android:textAllCaps="true"
             android:textSize="12sp"
             android:padding="6dp"
             android:textColor="@color/black"
             android:layout_margin="6dp"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content">
         </Button>
         <Button
             android:id="@+id/btn_Technology"
             android:text="technology"
             android:textAllCaps="true"
             android:textSize="12sp"
             android:padding="6dp"
             android:textColor="@color/black"
             android:layout_margin="6dp"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content">
         </Button>
      </LinearLayout>

   </HorizontalScrollView>

   <androidx.recyclerview.widget.RecyclerView
       android:id="@+id/recycler_main"
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:layout_margin="8dp">
   </androidx.recyclerview.widget.RecyclerView>
</LinearLayout>